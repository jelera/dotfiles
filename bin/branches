#!/usr/bin/env bash
# Display recent git branches sorted by commit date

set -e

# Show top 50 most recently committed branches
git for-each-ref \
    --sort=-committerdate \
    refs/heads/ \
    --format='%(color:yellow)%(refname:short)%(color:reset) - %(color:green)%(committerdate:relative)%(color:reset) - %(color:blue)%(authorname)%(color:reset)' \
    | head -n 50
