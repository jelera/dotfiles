# Shell Aliases
# Loaded by both bash and zsh

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias dotfiles='cd ~/.config/dotfiles'

# mise - version manager shortcuts
alias mi='mise install'
alias mig='mise install -g'
alias miu='mise use'
alias miug='mise use -g'
alias mils='mise list'
alias milsr='mise ls-remote'
alias mic='mise current'
alias miup='mise upgrade'
alias miun='mise uninstall'
alias mix='mise exec'
alias miw='mise which'
alias miconf='nvim ~/.config/mise/config.toml'
alias midoc='mise doctor'

# Neovim
alias nv='nvim'
alias vim='nvim'
alias nvif='nvim $(fzf --height 40%)'
alias nvrc='nvim ~/.config/nvim/init.lua'

# Tmux
alias tx='tmuxinator'

# CTags
alias retag='ag -l | ctags -R --links=no -L-'

# Git aliases
alias g='git'
alias ga='git add'
alias gaf='git add $(fzf --height 50%)'
alias gaa='git add --all'
alias gap='git add --patch'
alias gst='git status'
alias gc='git commit -v'
alias gd='git diff'
alias gp='git push'
alias gpl='git pull'
alias gl='git log --oneline --graph --decorate'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gbr='git branch'
alias gm='git merge'

# Modern CLI tools (if installed via mise or system)
if command -v eza &> /dev/null; then
    alias ls='eza --icons --group-directories-first'
    alias la='eza -lah --icons --group-directories-first'
    alias ll='eza -lh --icons --group-directories-first'
    alias lt='eza --tree --icons --level=2'
    alias lta='eza --tree --icons'
else
    alias la='ls -lah'
    alias ll='ls -lh'
fi

if command -v bat &> /dev/null; then
    alias cat='bat --paging=never'
    alias cata='bat'  # cat with paging enabled
    alias less='bat --paging=always'
fi

if command -v rg &> /dev/null; then
    alias grep='rg'
fi

if command -v fd &> /dev/null; then
    alias find='fd'
fi

if command -v lazygit &> /dev/null; then
    alias lg='lazygit'
fi

# Docker shortcuts
alias dc='docker-compose'
alias dcu='docker-compose up'
alias dcd='docker-compose down'
alias dcl='docker-compose logs -f'

# System
alias h='history'
alias j='jobs'
alias c='clear'
alias reload='exec $SHELL -l'

# Helpers
alias path='echo -e ${PATH//:/\\n}'
alias ports='netstat -tulanp'

# Source local aliases if they exist
# Create your own aliases in ~/.alias.local
# Example:
#   alias myproject='cd ~/projects/myproject'
[[ -f ~/.alias.local ]] && source ~/.alias.local
