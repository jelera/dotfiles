# Ghostty Terminal Configuration
# Ported from iTerm2 settings
# https://ghostty.org/docs/config

# ===== Font Configuration =====
# Ported from iTerm2: CaskaydiaCoveNF-Regular 16
font-family = "CaskaydiaCove Nerd Font"
font-size = 16

# Enable ligatures (matching iTerm2 setting)
# Remove the -calt line below to enable ligatures
# font-feature = -calt

# ===== Colors: Gruvbox Dark =====
# Ported from iTerm2 custom Gruvbox Dark color scheme
theme = dark

# Base colors
background = #1d1d1d
foreground = #e5d3a2

# Cursor colors
cursor-color = #e5d3a2
cursor-text = #1d1d1d

# ANSI colors (0-7: normal, 8-15: bright)
palette = 0=#1d1d1d
palette = 1=#c85900
palette = 2=#868715
palette = 3=#cc871a
palette = 4=#377274
palette = 5=#9f4b73
palette = 6=#568d57
palette = 7=#978771
palette = 8=#7f7060
palette = 9=#f63028
palette = 10=#a9b01d
palette = 11=#f7b024
palette = 12=#709585
palette = 13=#c76f89
palette = 14=#7db568
palette = 15=#e5d3a2

# ===== Cursor =====
# Ported from iTerm2: Non-blinking block cursor
cursor-style = block
cursor-style-blink = false

# ===== Window Appearance =====
window-decoration = true
window-padding-x = 4
window-padding-y = 4
window-padding-balance = true

# Window size (matching iTerm2: 80x25)
window-width = 80
window-height = 25

# Transparency (iTerm2 had 0.02, very subtle)
background-opacity = 0.98

# ===== Performance =====
# GPU acceleration
gpu-driver = auto

# ===== Scrollback =====
# Ported from iTerm2: 1000 lines
scrollback-limit = 1000

# ===== Shell Integration =====
shell-integration = zsh
shell-integration-features = cursor,sudo,title

# ===== Behavior =====
# Copy/Paste
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true
clipboard-paste-bracketed-safe = true

# Mouse
mouse-hide-while-typing = true
focus-follows-mouse = false

# Confirmation dialogs
confirm-close-surface = false
quit-after-last-window-closed = false

# ===== macOS Specific =====
# Option key behavior (iTerm2 used normal mode, not Meta)
macos-option-as-alt = true

# macOS window options
macos-non-native-fullscreen = true
macos-titlebar-style = hidden

# ===== Keybindings =====
# Window management
keybind = super+n=new_window
keybind = super+w=close_surface
keybind = super+t=new_tab
keybind = super+shift+t=reopen_tab

# Tab navigation
keybind = super+shift+left_bracket=previous_tab
keybind = super+shift+right_bracket=next_tab
keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5
keybind = super+6=goto_tab:6
keybind = super+7=goto_tab:7
keybind = super+8=goto_tab:8
keybind = super+9=goto_tab:9

# Split management
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+shift+w=close_surface
keybind = super+left=goto_split:left
keybind = super+right=goto_split:right
keybind = super+up=goto_split:top
keybind = super+down=goto_split:bottom

# Resize splits
keybind = super+alt+left=resize_split:left,10
keybind = super+alt+right=resize_split:right,10
keybind = super+alt+up=resize_split:up,10
keybind = super+alt+down=resize_split:down,10

# Font size
keybind = super+plus=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+0=reset_font_size

# Text operations
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+f=search

# Scrollback
keybind = super+k=clear_screen
keybind = page_up=scroll_page_up
keybind = page_down=scroll_page_down
keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down

# Utilities
keybind = super+comma=config_editor
keybind = super+shift+r=reload_config
keybind = super+shift+i=inspector:toggle

# ===== Advanced =====
# Working directory
working-directory = inherit

# Auto-update (macOS only)
auto-update = check
