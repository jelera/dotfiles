# Git configuration template

[user]
    name = Jose Elera
    email = jelera@users.noreply.github.com

[core]
    editor = nvim
    autocrlf = input
    pager = delta
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	quotepath = false
    excludesfile = ~/.gitignore_global
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	quotepath = false

[commit]
	template = ~/.config/dotfiles/tools/git/gitmessage
	gpgsign = true

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true

[rebase]
    autoStash = true

[alias]
    # Status and info
    st = status
    s = status --short --branch

    # Adding
    ap = add -p

    # Branching
    co = checkout
    cob = checkout -b
    br = branch
    bra = branch -a
    brd = branch -d
    brD = branch -D

    # Committing
    ci = commit
    ca = commit -a
    cm = commit -m
    cam = commit -am
    amend = commit --amend
    amendn = commit --amend --no-edit

    # Diffing
    d = diff
    dc = diff --cached
    ds = diff --stat

    # Logging
    lg = log --oneline --graph --decorate
    lga = log --oneline --graph --decorate --all
    lgp = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

    # Remote operations
    f = fetch
    fa = fetch --all
    p = push
    pl = pull

    # Stashing
    st = stash
    stp = stash pop
    stl = stash list

    # Utilities
    unstage = reset HEAD --
    discard = checkout --
    last = log -1 HEAD
    visual = !gitk
    aliases = config --get-regexp alias

    # Advanced
    tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
    contributors = shortlog --summary --numbered
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[[:lower:]]"

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = Dracula

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3
    tool = nvimdiff

[diff]
    colorMoved = default
    tool = nvimdiff

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
